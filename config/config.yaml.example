# Starrain-BOT Configuration Template
# Copy this file to config.yaml and modify the settings

# OneBot Configuration
onebot:
  # Connection type (choose one): ws, reverse_ws, http
  # ws: Bot connects to NapCat WebSocket server (forward connection)
  # reverse_ws: NapCat connects to bot WebSocket server (reverse connection)
  # http: Use HTTP API to call NapCat
  connection_type: "http"
  
  # Forward WebSocket configuration (for connection_type: ws)
  url: "ws://localhost:3001"
  
  # Access token (leave empty if not set in NapCat)
  access_token: ""
  
  # HTTP configuration (for connection_type: http)
  http_url: "http://localhost:3000"
  
  # Reverse WebSocket configuration (for connection_type: reverse_ws)
  reverse_ws_url: "ws://localhost:3002"
  
  # Heartbeat interval (seconds)
  heartbeat_interval: 5

# Bot Configuration
bot:
  # Bot QQ number (MUST CHANGE THIS to your bot's QQ)
  qq: 123456789
  
  # Auto reconnect
  auto_reconnect: true
  
  # Reconnect interval (milliseconds)
  reconnect_interval: 5000
  
  # Max reconnect attempts (-1 for unlimited)
  max_reconnect_attempts: 10
  
  # Load all plugins on startup
  load_all_on_startup: true

# Permission Management
permission:
  # List of BOT admin QQ numbers
  # Add your QQ here to get admin privileges
  admins:
    - 987654321
  
  # Enable group permission system
  enable_group_permission: true
  
  # Extra permissions for group admins
  group_admin_permissions:
    - kick_member
    - mute_member

# Plugin Configuration
plugin:
  # Plugin directory
  dir: "./plugins"
  
  # Auto load plugins on startup
  auto_load: true
  
  # Enable hot reload (reload plugin when file is modified)
  hot_reload: true
  
  # Hot reload interval (seconds)
  hot_reload_interval: 2
  
  # Plugin metadata file
  metadata_file: "plugin_metadata.json"

# Log Configuration
log:
  # Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
  level: "INFO"
  
  # Log file path
  file: "logs/bot.log"
  
  # Output to console
  console: true
  
  # Color output
  color: true

# Image Rendering Configuration
renderer:
  # Cache directory
  cache_dir: "./cache"
  
  # Max cache size
  max_cache_size: 100
  
  # Default image width
  default_width: 800
  
  # Default image height
  default_height: 600
  
  # Cache expire time (seconds)
  cache_expire: 3600

# Performance Optimization
performance:
  # Async event processing
  async_events: true
  
  # Event queue size
  event_queue_size: 1000
  
  # Worker threads
  worker_threads: 4
  
  # Database connection pool size
  db_pool_size: 10
